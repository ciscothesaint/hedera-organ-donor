# Hedera Testnet Credentials
# Get your account from https://portal.hedera.com
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY
HEDERA_NETWORK=testnet

# Contract IDs (will be filled after deployment)
WAITLIST_CONTRACT_ID=
MATCHING_CONTRACT_ID=
AUDIT_CONTRACT_ID=
DAO_CONTRACT_ID=

# Topic IDs for Hedera Consensus Service
PATIENT_REGISTRATION_TOPIC_ID=
ORGAN_MATCH_TOPIC_ID=
AUDIT_LOG_TOPIC_ID=

# Database
MONGODB_URI=mongodb://localhost:27017/organ-waitlist

# API Configuration
PORT=3001
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# DAO Platform JWT (MUST BE DIFFERENT from JWT_SECRET for security)
DAO_JWT_SECRET=your-dao-secret-key-change-in-production-different-from-admin

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
